.footer-inner
	display flex
	justify-content stretch
	+t()
		padding-y(30px)
	+d()
		padding-y(40px)

	&__container-logo
		flex-shrink 0
		+t()
			width 33%
		+m()
			width 50%
		+d()
			width 360px


	&__container-nav
		width auto
		+t()
			display none

	&__social-block
		+t()
			display flex
			width 33%
			justify-content center
			align-items center
		+m()
			display flex
			width 50%
			justify-content flex-end
			align-items flex-start
		+d()
			display none

	&__container-network
		width 245px
		flex-shrink 0
		+t()
			display flex
			width 33%
			justify-content flex-end
		+m()
			display none
