mixin courses-slider(arr)
	+b.courses-slider&attributes(attributes)
		block
		each val in arr

			+e.wrapp-item
				+b.course-item.js-course-item

					if (val['direction'])
						+e('span').direction #{val['direction']}

					if (val['specialty'])
						+e('h3').speciality !{val['specialty']}

					if (val['date_start'])
						+e('p').date_start #{val['date_start']}

					if (val['duration_time'])
						+e('p').date_time #{val['duration_time']}

					if (val['number_lessons'])
						+e('p').date_lessons #{val['number_lessons']}

					if (val['button_detail'])
						+e('button').button-detail
							+e('span') #{val['button_detail']}

					if (val['soon'])
						+e.soon !{val['soon']}

					if (val['pre_set'])
						+e.pre-set #{val['pre_set']}

					if (val['days_left'])
						+e.days-left #{val['days_left']}