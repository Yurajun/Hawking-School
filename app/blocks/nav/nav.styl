.nav
	display flex
	width 398px
	height 100%
	justify-content space-between
	align-items center

	&__item
		position relative
		display flex
		height 100%
		align-items center

	&__item:nth-of-type(2)>a:after
			position absolute
			right 0
			content ''
			size(16px, 7px)
			retinaBackground(arrow_down, png)

		a
			position relative
			font-family $psb
			font-size 16px
			text-decoration none
			color $white

	&__item:hover &__submenu
			display block

	&__submenu
		position absolute
		top 100%
		display none
		background-color $main_black

