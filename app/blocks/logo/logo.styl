.logo
	display block
	background-repeat no-repeat
	background-position center center
	background-size contain
	+t()
		size(117px, 30px)
	+m()
		size(79px, 20px)
	+d()
		size(156px, 40px)

	&_white
		retinaBackground('logo-white', 'png')

	&_black
		retinaBackground('logo-black', 'png')

	&_footer-margin
		margin-bottom 30px
		+t()
			display none
		+m()
			display none
		+d()
			display block
