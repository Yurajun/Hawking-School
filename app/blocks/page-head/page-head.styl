.page-head
	margin 0 auto
	display block
	// background-image linear-gradient(to right, #2d062d, #b5b66d)
	+t()
		padding 60px 0
	+m()
		padding 30px 0
	+d()
		padding 70px 0

	h1
		position relative
		z-index 20
		font-family $pnb
		line-height 1.2
		text-align center
		color $white
		+t()
			margin-bottom 30px
			font-size 30px
		+m()
			margin-bottom 17px
			font-size 18px
		+d()
			margin-bottom 60px
			font-size 48px

		span
			font-family $pnr
			font-size inherit

	a
		position relative
		z-index 20
		margin 0 auto
		font-family $pnr
		text-decoration none
		color $white
		background-color $main_red
		transition background-color .25s
		+t()
			font-size 14px
			border-radius 18px
			size(154px, 35px)
		+m()
			font-size 12px
			border-radius 14px
			size(125px, 28px)
		+d()
			font-size 16px
			border-radius 26px
			size(185px, 45px)
	a
		display flex
		justify-content center
		align-items center

		&:hover
			background-color $main_red - 15%
