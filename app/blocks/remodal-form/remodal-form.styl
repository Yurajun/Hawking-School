.remodal-form
	display block
	text-align left

	&__form-field
		margin-bottom 19px

		&:last-of-type
			margin-bottom 0

		&_checkbox
			position relative

			label.error
				position absolute
				bottom -18px
				padding-left 20px
				display block
				font-family $pnr
				font-size 16px
				color $red