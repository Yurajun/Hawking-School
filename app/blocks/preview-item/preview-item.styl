.preview-item
	margin 0 auto
	display flex
	width 100%
	+t()
		margin-bottom 38px
		max-width 708px
	+m()
		margin-bottom 29px
		flex-direction column
		justify-content center
	+d()
		margin-bottom 60px
		width 910px

	&:last-of-type
		margin-bottom 0

	&__picture-wrapper
		position relative
		+m()
			margin-bottom 15px

		span
			position absolute
			top 50%
			left 50%
			font-family $pnt
			color $red
			+t()
				font-size 48px
				transform translateY(-10%)
			+m()
				top 100%
				font-size 30px
				transform translate(-50%, -60%)
			+d()
				font-size 72px
				transform translateY(-40%)

	&__img
		display flex
		flex-shrink 0
		justify-content center
		+m()
			margin 0 auto

	&__desc
		+t()
			padding-left 41px
		+m()
			padding-left 0
			text-align center
		+d()
			padding-top 8px
			padding-left 49px
		h3
			margin-bottom 16px
			font-family $pnb
			color $white
			+t()
				font-size 22px
			+m()
				font-size 16px
			+d()
				font-size 24px

		p
			font-family $pnr
			color $white
			+t()
				font-size 16px
				line-height lh(16, 24)
			+m()
				font-size 12px
				line-height 1.333
			+d()
				font-size 18px
				line-height 1.667
